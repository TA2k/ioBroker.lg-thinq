{
    "i18n": true,
    "type": "panel",
    "items": {
        "_headerAdapter": {
            "type": "header",
            "text": "Adapter settings for lg-thinq",
            "size": 2
        },
        "user": {
            "type": "text",
            "label": "LG ThinQ Email",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "password": {
            "type": "password",
            "label": "LG ThinQ Password",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4
        },
        "interval": {
            "type": "number",
            "label": "Update interval in minutes",
            "min":0.5,
            "max":150,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": 5
        },
        "interval_thinq1": {
            "type": "number",
            "label": "Update thinq1 interval in minutes",
            "min":0,
            "max":1440,
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": 30
        },
        "country": {
            "type": "text",
            "label": "Country",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": "DE"
        },
        "language": {
            "type": "text",
            "label": "Language",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": "de_DE"
        },
        "platform": {
            "type": "text",
            "label": "Platform",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "default": "LGThinQ"
        },
        "regProcedure": {
            "type": "select",
            "label": "selectReg",
            "tooltip": "selectRegTip",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "options": [
                {
                    "label": "APP-Login",
                    "value": false
                },
                {
                    "label": "Third-Party-Login",
                    "value": true
                }
            ],
            "default": false
        },
        "setState": {
            "type": "setState",
            "label": "deleteText",
            "id": "lg-thinq.%INSTANCE%.session",
            "tooltip": "deleteSession",
            "ack": true,
            "val": "",
            "newLine": true,
            "xs": 12,
            "sm": 12,
            "md": 6,
            "lg": 4,
            "xl": 4,
            "style": {
                "backgroundColor": "red",
                "border": "outset"
            }
        }
    }
}
